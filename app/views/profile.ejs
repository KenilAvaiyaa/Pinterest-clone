<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>profile</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/profile.css">
  </head>
  <body>
    <div class="containerss">
      <div class="cardss">
        <div class="profile-picture">
          <img src="../images/IMG_4675.JPG" alt="Profile Picture">
        </div>
        <h2 class="name"><%= user.fullname %></h2>
        <h3 class="username"><%= user.username %></h3>
        <p class="description">your description</p>
        <a href="/logout" class="button">Log Out</a>
        <form action="/uplode" method="post" enctype="multipart/form-data">
          <input type="text" name="imageinfo" value="description">
          <input type="file" name="file">
          <button type="submit" >Uplode</button>
        </form>
      </div>
    </div>

    <div class="container flex">
      <div class="cardsflex">
        <% user.posts.forEach((e)=>{ %>
          <div class="card" style="width: 18rem; ">
            <img src="/images/uplode/<%= e.images %>" class="card-img-top " alt="...">
            <div class="card-body">
              <p class="card-text"><%= e.postText %></p>
            </div>
       <% }) %>
      </div>
      
      </div>
    </div>
    

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>